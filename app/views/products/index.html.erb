<div class="index-page-container">
  <% if user_signed_in? && current_user.admin == true %>
    <%= link_to "New product", new_product_path, class: "btn btn-primary" %>
  <% end %>
  
    <div class="index-grid">
      <h4> <a id="index-title"></a> Who you are?</h4>
      <% @products.each do |product| %>
        <div class="mx-2 px-2">
          <%= link_to product_path(product.id) do %> 
           <div class="product-card" > 
            <div class="index-card-title">
              <%= link_to product.name, product_path(product.friendly_id) %>
            </div>
             <div class="product-card-image" style="background-image: url(
                <% if product.photos.attached?  %>
                  <%= cl_image_path product.photos[3].key, height: 300, width: 400, crop: :fill %>
                <% else %>
                  <%= 'assets/product.png' %>
                <% end %>
              );"> 
              </div>
            <div class="product-card-info">  
             <p> <%= product.small_text %> </p> 
             
           </div>
          <div class="see-more">
            <%= link_to "See More", product_path(product.friendly_id), class: "btn btn-primary" %>
          </div>
          </div>
          
          <%# <%= button_to "Add #{product.name} to cart", new_product_line_item_path(:product_id => product.id, :quantity => 1) %> 
        <% end %>  
        </div>
        <% end %>
    </div>

