<div class="row m-0">
  <div class="left-col col-6 p-5">
    <h4 class="text-info mt-3 pt-3">Let's add a new dish to your menu</h4>
    <div class="form-top">
      <h5 class="text-secondary my-4">First things first: Let's start with the basics</h5>
      <h5 class="text-muted"></h5>
        <%= simple_form_for [@product] do |f| %>
          <%= f.input :name,  label: false, placeholder: 'Service Target' %>
          <%= f.rich_text_area :description,  label: false, placeholder: 'Service Description' %>
          <%= f.rich_text_area :text_area_one,  label: false, placeholder: 'First Text' %>
          <%= f.rich_text_area :text_area_two,  label: false, placeholder: 'Second Text' %>
          <%= f.rich_text_area :text_area_three,  label: false, placeholder: 'Thrid Text' %>
          <%= f.rich_text_area :small_text,  label: false, placeholder: 'Index Text' %>
          <div class="row m-3">
            <div class="col-6">
              <%= f.input :photos, as: :file, input_html: {multiple: true, class: "d-none", id: 'photo-input'}, label_html: {class: "upload-photo"} , label: ':camera: Upload photo(s)' %>
              <%= f.submit "Let's sell this product", class: 'btn btn-primary' %>
            </div>
          </div>
        <% end %>
    </div>
  </div>    
  <div class="right-col col-6 vh-100" style="background-image: url('<%= image_path("boxes.png") %>')"></div>
</div>